@model DAWEBJollybee.Models.SANPHAM

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/User/Views/Shared/Home_Layout.cshtml";
}
<title>Menu </title>
<body>

    <!-- Modal Search Start -->
    <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-fullscreen">
            <div class="modal-content rounded-0">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Search by keyword</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body d-flex align-items-center">
                    <div class="input-group w-75 mx-auto d-flex">
                        <input type="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1">
                        <span id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal Search End -->
    <!-- Single Page Header start -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">MÓN NGON MỖI NGÀY</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="/User/HomeUI/Index">Home</a></li>
            <li class="breadcrumb-item active text-white">Thực đơn</li>
        </ol>
    </div>
    <!-- Single Page Header End -->
    <!-- Fruits Shop Start-->
    <div class="container-fluid fruite py-5">
        <div class="container py-5">
            <h1 class="mb-4">MENU</h1>
            <div class="row g-4">
                <div class="col-lg-12">
                    <div class="row g-4">
                        <div class="col-xl-3">
                            <form action="@Url.Action("Index", "ProductGrid")" method="get" id="searchForm" class="input-group w-100 mx-auto d-flex">
                                <input type="search" name="search" class="form-control p-3" placeholder="keywords" aria-describedby="search-icon-1" value="@ViewBag.SearchKeyword">
                                <button type="submit" id="search-icon-1" class="input-group-text p-3"><i class="fa fa-search"></i></button>
                            </form>
                        </div>
                        <div class="col-6"></div>
                        <div class="col-xl-3">
                            @using (Html.BeginForm("Index", "ProductGrid", FormMethod.Get, new {@id="filterform"}))
                            {
                                <div class="bg-light ps-3 py-3 rounded d-flex justify-content-between mb-4">
                                    <label for="fruits">Default Sorting:</label>
                                    <select id="fruits" name="filter" class="border-0 form-select-sm bg-light me-3">
                                        <option value="All" @(ViewBag.SelectedLSP == "All" ? "selected" : "")>All</option>
                                        <option value="Đồ ăn" @(ViewBag.SelectedLSP == "Đồ ăn" ? "selected" : "")>Đồ ăn</option>
                                        <option value="Đồ uống" @(ViewBag.SelectedLSP == "Đồ uống" ? "selected" : "")>Đồ uống</option>
                                        <option value="Đồ tráng miệng" @(ViewBag.SelectedLSP == "Đồ tráng miệng" ? "selected" : "")>Tráng miệng</option>
                                    </select>
                                </div>
                            }
                            </div>
                    </div>
                    <div class="row g-4">
                        <div class="col-lg-3">
                            <div class="row g-4">
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4>Danh mục sản phẩm</h4>
                                        <ul class="list-unstyled fruite-categorie">
                                            @{
                                                List<DAWEBJollybee.Models.LOAISP> lsp = (List<DAWEBJollybee.Models.LOAISP>)ViewBag.ListCategory;
                                                foreach (var category in lsp)
                                                {
                                                    int productCount = category.SANPHAM.Count;
                                                    <li>
                                                        <div class="d-flex justify-content-between fruite-name">
                                                            <a href="#"><i class="fas fa-apple-alt me-2"></i>@category.TENLOAISP</a>
                                                            <span>(@productCount)</span>
                                                        </div>
                                                    </li>
                                                }
                                            }
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="mb-3">
                                        <h4 class="mb-2">Price</h4>
                                        <input type="range" class="form-range w-100" id="rangeInput" name="rangeInput" min="0" max="500" value="0" oninput="amount.value=rangeInput.value">
                                        <output id="amount" name="amount" min-velue="0" max-value="500" for="rangeInput">0</output>
                                    </div>
                                </div>

                                <div class="col-lg-12">
                                    <h4 class="mb-3">Featured products</h4>
                                    <div class="d-flex align-items-center justify-content-start">
                                        <div class="rounded me-4" style="width: 100px; height: 100px;">
                                            <img src="~/Assets/User/img/combo_app.png" class="img-fluid rounded" alt="">
                                        </div>
                                        <div>
                                            <h6 class="mb-2">Gà giòn vui vẻ</h6>
                                            <div class="d-flex mb-2">
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star"></i>
                                            </div>
                                            <div class="d-flex mb-2">
                                                <h5 class="fw-bold me-2">77.000đ </h5>
                                                <h5 class="text-danger text-decoration-line-through">99.000đ</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-start">
                                        <div class="rounded me-4" style="width: 100px; height: 100px;">
                                            <img src="~/Assets/User/img/jollyhotdog.png" class="img-fluid rounded" alt="">
                                        </div>
                                        <div>
                                            <h6 class="mb-2">JollyHotdog</h6>
                                            <div class="d-flex mb-2">
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                            </div>
                                            <div class="d-flex mb-2">
                                                <h5 class="fw-bold me-2">45.000đ</h5>
                                                <h5 class="text-danger text-decoration-line-through">50.000đ</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex align-items-center justify-content-start">
                                        <div class="rounded me-4" style="width: 100px; height: 100px;">
                                            <img src="~/Assets/User/img/sandwichga.png" class="img-fluid rounded" alt="">
                                        </div>
                                        <div>
                                            <h6 class="mb-2">Sandwich gà </h6>
                                            <div class="d-flex mb-2">
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                                <i class="fa fa-star text-secondary"></i>
                                            </div>
                                            <div class="d-flex mb-2">
                                                <h5 class="fw-bold me-2">45.000đ</h5>
                                                <h5 class="text-danger text-decoration-line-through">50.000đ</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center my-4">
                                        <a href="#" class="btn border border-secondary px-4 py-3 rounded-pill text-primary w-100">Vew More</a>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                        <div class="col-lg-9">
                            <div class="row g-4 justify-content-center">
                                @if (ViewBag.Products.Count>0)
                                {
                                    foreach (var product in ViewBag.Products)
                                    {
                                        <div class="col-md-6 col-lg-6 col-xl-4 fruite-item" data-category="@product.LOAISP.TENLOAISP">
                                            <div class="rounded position-relative border border-secondary fruite-item" data-category="@product.LOAISP.TENLOAISP">
                                                <div class="fruite-img">
                                                    <a href="@Url.Action("Index", "ProductDetail", new { id = product.IDSP })">
                                                        <img src="@product.HINHANH" class="img-fluid w-100 rounded-top" alt="">
                                                    </a>
                                                </div>
                                                <div class="text-white bg-secondary px-3 py-1 rounded position-absolute" style="top: 10px; left: 10px;">@product.LOAISP.TENLOAISP</div>
                                                <div class="p-4 rounded-bottom">
                                                    <h4 class="search-name">@product.TENSP</h4>
                                                    <div class="d-flex justify-content-between flex-lg-wrap">
                                                        <p class="fs-5 fw-bold mb-0" style="color:red;">@Html.FormatValue(product.DONGIA, "{0:#,####}") đ</p>
                                                        <a href="@Url.Action("AddToCart", "Cart", new { id = @product.IDSP })" class="btn border border-secondary rounded-pill px-3 text-primary add-to-cart" data-product-id="@product.IDSP"><i class="fa fa-shopping-bag me-2 text-primary"></i> Add to cart</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div id="searchResultMessage" class="alert alert-info mt-3" role="alert">
                                        Không tìm thấy sản phẩm phù hợp.
                                    </div>
                                }
                            <div class="col-12">
                                <div class="pagination d-flex justify-content-center mt-5" id="pagination">
                                    @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                    {
                                        // Kiểm tra xem search và filter có giá trị không trước khi thêm chúng vào URL
                                        var searchParam = string.IsNullOrEmpty(ViewBag.SearchKeyword) ? "" : ViewBag.SearchKeyword;
                                        var filterParam = ViewBag.SelectedLSP == "All" ? "" : ViewBag.SelectedLSP;

                                        <a href="@Url.Action("Index", "ProductGrid", new { page = i, search = searchParam, filter = filterParam })" class="rounded pageNum @(i == ViewBag.CurrentPage ? "active" : "")">@i</a>
                                    }
                                </div>
                            </div>
                                </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#fruits').change(function () {
                $('#filterform').submit();
            });
        });
    </script>
</body>
<!-- Fruits Shop End-->
